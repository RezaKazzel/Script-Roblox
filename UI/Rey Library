local ReyUI = {}

local CoreGui = game:GetService("CoreGui")

local function createScreenGui(name)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = name
    screenGui.Parent = CoreGui
    screenGui.ResetOnSpawn = false
    return screenGui
end

function ReyUI:CreateWindow(title)
    local screenGui = createScreenGui("ReyUI")
    local panel = Instance.new("Frame")
    panel.Size = UDim2.new(0, 500, 0, 300)
    panel.Position = UDim2.new(0.5, -250, 0.5, -150)
    panel.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    panel.BorderSizePixel = 0
    panel.Parent = screenGui

    local header = Instance.new("TextLabel")
    header.Size = UDim2.new(1, 0, 0, 30)
    header.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    header.Text = title or "Rey UI"
    header.TextColor3 = Color3.fromRGB(255, 255, 255)
    header.Font = Enum.Font.GothamBold
    header.TextSize = 16
    header.Parent = panel

    return {
        Panel = panel,
        ScreenGui = screenGui,
        Header = header,
    }
end

function ReyUI:CreateButton(window, text, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 200, 0, 50)
    button.Position = UDim2.new(0.5, -100, 0.5, 0)
    button.BackgroundColor3 = Color3.fromRGB(85, 85, 255)
    button.Text = text or "Button"
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.GothamBold
    button.TextSize = 14
    button.Parent = window.Panel

    button.MouseButton1Click:Connect(function()
        if callback then
            callback()
        end
    end)

    return button
end

function ReyUI:CreateToggle(window, text, default, callback)
    local toggle = Instance.new("TextButton")
    toggle.Size = UDim2.new(0, 200, 0, 50)
    toggle.Position = UDim2.new(0.5, -100, 0.5, 60)
    toggle.BackgroundColor3 = default and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 0, 0)
    toggle.Text = text or "Toggle"
    toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
    toggle.Font = Enum.Font.GothamBold
    toggle.TextSize = 14
    toggle.Parent = window.Panel

    local state = default or false
    toggle.MouseButton1Click:Connect(function()
        state = not state
        toggle.BackgroundColor3 = state and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 0, 0)
        if callback then
            callback(state)
        end
    end)

    return toggle
end

return ReyUI
